<configs>
       
	<!-- Remove all surface biome decorations -->
	<remove xpath="/worldgeneration/biomes/biome//decorations/decoration"/>
  
	<set xpath="//biome[@name='wasteland']//layers//layer[@blockname='terrDestroyedStone']/@blockname">terrWastelandGround</set>
	<setattribute xpath="//biome[@name='wasteland']" name="topsoil_block">terrWastelandGround</setattribute>
	
	<set xpath="//biome[@name='pine_forest']//layers//layer[@blockname='terrForestGround']/@blockname">terrACForestGround</set>
	<setattribute xpath="//biome[@name='pine_forest']" name="topsoil_block">terrACForestGround</setattribute>
	
	<set xpath="//biome[@name='desert']//layers//layer[@blockname='terrDesertGround']/@blockname">terrACDesertGround</set>
	<setattribute xpath="//biome[@name='desert']" name="topsoil_block">terrACDesertGround</setattribute>
	
	<set xpath="//biome[@name='snow']//layers//layer[@blockname='terrSnow']/@blockname">terrACSnow</set>
	<setattribute xpath="//biome[@name='snow']" name="topsoil_block">terrACSnow</setattribute>

</configs>